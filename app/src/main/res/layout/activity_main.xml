<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/bt_rvList"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:text="Recycler View"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="onClick" />

    <Button
        android:id="@+id/bt_lvHolderList"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="98dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:text="List View with Holder"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/bt_lvList"
        app:layout_constraintRight_toLeftOf="@+id/bt_rvList"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/bt_lvList"
        style="@android:style/Widget.Material.Light.Button.Borderless"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="16dp"
        android:onClick="onClick"
        android:text="List View"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/list_size_spinner"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="35dp"
        android:layout_marginTop="31dp"
        style="@style/Widget.AppCompat.DropDownItem.Spinner"
        app:layout_constraintTop_toBottomOf="@+id/bt_lvHolderList"
        android:layout_marginStart="61dp"
        app:layout_constraintLeft_toRightOf="@+id/list_size_tv"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/list_size_tv"
        style="@android:style/TextAppearance.Holo.Widget.TextView"
        android:layout_width="85dp"
        android:layout_height="35dp"
        android:layout_marginTop="31dp"
        android:text="Select Size"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_lvList"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />
</android.support.constraint.ConstraintLayout>
